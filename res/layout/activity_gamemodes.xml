	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical"
	    android:gravity="center" >

	    <Button
	        android:id="@+id/bStandard"
	        android:background="@drawable/button_custom3"
	        android:textColor="#FFFFFF"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="6dp"
	        android:layout_gravity="center_horizontal"
	        android:minWidth="300dp"
		   	android:minHeight="70dp"
	        android:text="Standard Mode" />

	    <TextView
	        android:id="@+id/tvStandardInfo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="The Standard game mode allows any third-party keyboard advantages such as Swype and SwiftKey. Also requires more words per round with more time."
	        android:textColor="#FFFFFF"
	        android:padding="10dp"
	        android:layout_margin="10dp"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	
	    <Button
	        android:id="@+id/bHardcore"
	        android:background="@drawable/button_custom2"
	        android:textColor="#FFFFFF"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="6dp"
	        android:layout_gravity="center_horizontal"
	        android:minWidth="300dp"
		   	android:minHeight="70dp"
	        android:text="Hardcore Mode" />
	    
	    <TextView
	        android:id="@+id/tvHardcoreInfo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="The Hardcore game mode does not allow keyboard advantages and requires users to type each word letter by letter."
	        android:textColor="#FFFFFF"
	        android:padding="10dp"
	        android:layout_margin="10dp"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
    
